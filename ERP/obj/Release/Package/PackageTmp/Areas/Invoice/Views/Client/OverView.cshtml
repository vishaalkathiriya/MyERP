    ViewBag.Title = "OverView Client";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using ERP.Utilities

<div data-ng-controller="ClientOverViewCtrl" class="kyc-overview">

    <!-- BEGIN HEADER SECTION -->
    <div class="row" data-ng-init="LoadOverViewData('@ViewBag.ClientId')">
        <div class="col-sm-12">
           <div class="page-header main-page-header">
               <h2><i class="entypo-doc-text"></i>OverView Client</h2>
           </div>
        </div>
    </div>
    <!-- / END HEADER SECTION -->
