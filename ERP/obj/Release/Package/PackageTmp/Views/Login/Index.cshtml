@{
    Layout = null;
}

<!DOCTYPE html>

<html data-ng-app="ERPLogin">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ERP - Login</title>

    <!-- STYLESHEETS -->
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Noto+Sans:400,700,400italic" />
    <link rel="stylesheet" href="@Url.Content("~/Content/css/animate.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/css/font-icons/entypo/css/entypo.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/css/font-icons/entypo/css/animation.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/css/neon.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/css/login.css")" />
    <link rel="SHORTCUT ICON" href="@Url.Content("~/Content/images/favicon.ico")" />

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->

</head>

<body class="page-body login-page login-form-fall bg-banner" data-ng-controller="LoginController">

    <!-- LOADING MESSAGE -->
    <div class="loading-container animated flipInX" data-ng-show="IsDisplay">
        Please wait logging...
    </div>


    <!-- LOGIN CONTAINER -->
    <div class="login-container">
        <div class="login-header login-caret">
            <div class="login-content">
                <a href="#" class="logo">
                    <img src="Content/images/logo-color.png" alt="" />
                </a> <!-- / LOGO END -->

                <p class="description">Dear user, log in to access the admin area!</p>

                <!-- PROGRESS BAR INDICATOR -->
                <div class="login-progressbar-indicator">
                    <h3>43%</h3>
                    <span>logging in...</span>
                </div>
            </div>

        </div>

        <div class="login-progressbar">
            <div></div>
        </div>


        <!-- LOGIN FORM-->
        <div class="login-form">
            <div class="login-content">
                <form name="form_login" id="form_login" data-ng-submit="submitLogin()">
                    <div class="form-group">
                        <div class="input-group"
                             data-ng-class="{ 'validate-has-error' : form_login.username.$dirty && form_login.username.$invalid }">
                            <div class="input-group-addon">
                                <i class="entypo-user"></i>
                            </div>
                            <input type="text" class="form-control" name="username" id="username"
                                   data-ng-model="userLogin.Username"
                                   placeholder="Username"
                                   autocomplete="off"
                                   required="required" />
                        </div>
                    </div> <!-- / END FORM GROUP -->

                    <div class="form-group">
                        <div class="input-group"
                             data-ng-class="{ 'validate-has-error' : form_login.password.$dirty && form_login.password.$invalid }">
                            <div class="input-group-addon">
                                <i class="entypo-key"></i>
                            </div>
                            <input type="password" class="form-control" name="password" id="password"
                                   data-ng-model="userLogin.Password"
                                   placeholder="Password"
                                   autocomplete="off"
                                   required="required" />
                        </div>
                    </div> <!-- / END FORM GROUP -->

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block btn-login" data-ng-disabled="form_login.$invalid" data-ng-click="IsDisplay = 'true'">
                            @* <img src="~/Content/images/loader-2.gif" data-ng-if="IsDisplay"/>&nbsp;*@
                            Login In
                            <i class="entypo-login"></i>
                        </button>
                    </div><!-- / END FORM GROUP -->
                </form>

                <!-- OTHER LINKS -->
                <div class="login-bottom-links">
                    <a href="#" class="link">Forgot your password?</a>
                    <br />
                    <a href="#">ToS</a>  - <a href="#">Privacy Policy</a>
                </div>

            </div> <!-- / END LOGIN CONTENTS-->

        </div> <!-- / END LOGIN FORM -->

    </div> <!-- END LOGIN CONTAINER -->


    <!-- JAVASCRIPTS -->
    <script src="@Url.Content("~/Content/js/jquery-1.10.2.min.js")"></script>
    <script src="@Url.Content("~/Content/js/gsap/main-gsap.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.validate.min.js")"></script>
    <script src="@Url.Content("~/Content/js/neon-login.js")"></script>
    <script src="@Url.Content("~/Content/js/toastr.js")"></script>
    <script src="@Url.Content("~/Scripts/libs/angular/angular.min.js")"></script>
    <script src="@Url.Content("~/Scripts/modules/LoginApp.js")"></script>
</body>
</html>
