@*@using System.Web.Optimization*@

<!DOCTYPE html>

<html data-ng-app="ERPApp">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv='cache-control' content='no-cache'>
    <meta http-equiv='expires' content='0'>
    <meta http-equiv='pragma' content='no-cache'>
    <title>@ViewBag.Title</title>

    <!-- FAVICON ICON -->
    <link rel="SHORTCUT ICON" href="@Url.Content("~/Content/images/favicon.ico")" />

    <!-- STYLESHEETS -->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600' rel='stylesheet' type='text/css' />
    <link href="@Url.Content("~/Content/css/font-icons/font-awesome/css/font-awesome.min.css")" rel="stylesheet" media="all" />
    <link rel="stylesheet" href="@Url.Content("~/Content/css/font-icons/entypo/css/entypo.css")" media="all" />
    @Styles.Render("~/Content/app")
    @RenderSection("Styles", required: false)

    <!-- ANGULAR SPECIFIC CLASS -->
    <style>
          .ng-cloak {
              display: none;
          }
          /* Sticky footer styles
        -------------------------------------------------- */

          #footer {
              height: 30px;
              padding-left: 20px;
              padding-top: 7px;
              /*background-color: #f5f5f5;*/
              background-color: #303641;
              color: #aaabae;
          }

              #footer a {
                  color: #aaabae;
              }

          /* Lastly, apply responsive CSS fixes as necessary */
          @@media (max-width: 767px) {
              #footer {
                  margin-left: -20px;
                  margin-right: -20px;
                  padding-left: 20px;
                  padding-right: 20px;
              }
          }
    </style>

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->

</head>

<body class="page-body ng-cloak">
    <!-- SCROLL-TO-TOP BUTTON IN FOOTER WILL SCROLL HERE -->
    <div data-drc-scroll-top="" data-el=".go-to-top-main" data-padd="100" id="AdminTop"></div>

    <div class="page-container horizontal-menu">
            <header class="navbar navbar-fixed-top">
                <!-- set fixed position by adding class "navbar-fixed-top" -->
                <div class="navbar-inner">
                    <!-- logo -->
                    <div class="navbar-brand">
                        <a href="#">
                            <img src="@Url.Content("~/Content/images/logo-drc-horizontal.png")" alt="LOGO" />
                        </a>
                    </div>
                </div>
            </header> <!-- / END LOGO -->

        <div class="main-content">
            <div class="ajax-progress-wrapper modal-backdrop fade in" data-ng-show="IsAjaxLoading">
                <div class="ajax-progress">
                    Please wait...
                </div>
            </div> <!-- / END AJAX PROGRESS MESSAGE -->

            <!-- BODY SECTION-->
            @RenderBody()
        </div> <!-- / END MAIN CONTAINER -->

        <!-- BEGIN FOOTER SECTION -->
        <div id="footer" class="navbar-fixed-bottom">
            <!-- Hidden in medium and large device -->
            <div class="row hidden-md hidden-lg ">
                <div class="col-md-6">
                    <strong>Copyright © 2014 By DRC Infotech </strong>
                </div>
                <div class="col-md-6">
                    <div class="go-to-top" href="#AdminTop" du-smooth-scroll>
                        <i class="entypo-up-open-big"></i>
                    </div>
                </div>
            </div>

            <!-- Hidden in small and extra-small device -->
            <div class="row hidden-sm hidden-xs">
                <div class="col-md-4">
                    <strong><a href="http://www.drcinfotech.com/" target="_blank"><span>http://www.drcinfotech.com/</span></a></strong>
                </div>
                <div class="col-md-4 text-center">
                    <strong>Copyright © 2014 By DRC Infotech </strong>
                </div>
                <div class="col-md-4">
                    <div class="go-to-top" href="#AdminTop" du-smooth-scroll>
                        <i class="entypo-up-open-big"></i>
                    </div>
                </div>
            </div>
        </div>
        <!-- END FOOTER SECTION -->

    </div>
    <!-- JAVASCRIPS-->
    @Scripts.Render("~/Scripts/app")
    @Scripts.Render("~/Scripts/angularfiles")
    @RenderSection("Scripts", required: false)
</body>
</html>
